{
  "manifest_version": 2,
  "name": "VT Keyboard Extension",
  "version": "1.0",
  "description": "Modifies Enter key behavior on virtual keyboards for whitelisted websites to create new lines instead of submitting forms.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/content-script.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["src/service-worker.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "VT Keyboard Extension",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "options_page": "options.html",
  "browser_specific_settings": {
    "gecko": {
      "id": "vt-keyboard-extension@example.com"
    }
  }
}