{
  "manifest_version": 3,
  "name": "VT Keyboard Extension",
  "version": "1.0",
  "description": "Modifies Enter key behavior on virtual keyboards for whitelisted websites to create new lines instead of submitting forms.",
  "permissions": [
    "storage",
    "activeTab",
    "declarativeContent",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["service-worker.js"]
  },
  "action": {
    "default_title": "VT Keyboard Extension"
  },
  "options_ui": {
    "page": "options.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "vt-keyboard-extension@example.com",
      "strict_min_version": "109.0"
    }
  }
}